<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSS.MainPage">

    <ContentPage.Resources>
        <StyleSheet Source="../Styles/MainView.css" />
    </ContentPage.Resources>
    <StackLayout>
        <Button Text="Boton principal" StyleClass="CSSButton" />
        <Label Text="Bienvenido Carlos Herrera" StyleClass="lblTitulo" />

        <Image Source="foto.jpg" />

        <Label x:Name="lbl" Text="Bienvenido" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

        <Button Text="Ok" VerticalOptions="EndAndExpand"/>
    </StackLayout>

</ContentPage>
